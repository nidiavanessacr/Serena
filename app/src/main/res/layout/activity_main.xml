<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101820"
    tools:context=".MainActivity">

    <!-- BOTÓN AJUSTES ARRIBA A LA DERECHA -->
    <ImageButton
        android:id="@+id/btnAjustes"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:contentDescription="Ajustes"
        android:src="@android:drawable/ic_menu_manage"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnAjustes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MENSAJE DE BIENVENIDA -->
    <TextView
        android:id="@+id/txtBienvenidaMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenida"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ====================== LED ROJO ====================== -->
    <TextView
        android:id="@+id/txtRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/led_rojo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtBienvenidaMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnRojoOn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/encender"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D72638"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtRojo"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnRojoOff"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/apagar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8A1A21"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtRojo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ====================== LED VERDE ====================== -->
    <TextView
        android:id="@+id/txtVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/led_verde"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnRojoOn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnVerdeOn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/encender"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1B998B"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtVerde"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnVerdeOff"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/apagar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#157063"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtVerde"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ====================== LED AZUL ====================== -->
    <TextView
        android:id="@+id/txtAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/led_azul"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerdeOn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAzulOn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/encender"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0077B6"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtAzul"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnAzulOff"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/apagar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#004E73"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtAzul"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ====================== APAGAR TODO ====================== -->
    <Button
        android:id="@+id/btnApagar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/apagar_todo"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#555555"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnAzulOn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ====================== ESTADO ====================== -->
    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estado_desconectado"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnApagar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN LOGOUT ABAJO -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_btn"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:paddingHorizontal="30dp"
        android:backgroundTint="#8A1A21"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
